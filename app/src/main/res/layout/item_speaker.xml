<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="4dp"
    app:cardCornerRadius="@dimen/cardCornerRadius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivSpeakerImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/heightImageViewHome"
            android:src="@mipmap/ic_launcher"
            android:contentDescription="banner_platzi_conf"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/tvSpeakerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre expositor"
            android:textStyle="bold"
            android:textSize="@dimen/titleSize"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/tvSpeakerJob"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Trabajo expositor"
            android:textSize="@dimen/subtitleSize"
            android:textColor="@color/colorAccent" />

    </LinearLayout>

</androidx.cardview.widget.CardView>